{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Mocha tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [ 
        "--compilers", "js:@babel/register", 
        "--no-timeouts",
        "test/*Test.js" ],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}"
    }
  ]
}
